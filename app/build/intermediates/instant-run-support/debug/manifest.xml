<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidaalto.bookingroom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="org.androidaalto.bookingroom.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/CalendarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.androidaalto.bookingroom.MeetingActivity"
            android:label="@string/app_name" />
        <activity
            android:name="org.androidaalto.bookingroom.Screensaver"
            android:label="@string/app_name"
            android:theme="@style/CalendarTheme" />
        <activity
            android:name="org.androidaalto.bookingroom.AboutActivity"
            android:label="About"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="com.android.tools.fd.runtime.InstantRunService"
            android:exported="true" />
    </application>

</manifest>